{
  "compilerOptions": {
    "target": "ESNext", // or your preferred target
    "module": "ESNext", // or CommonJS, based on your project setup
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./",     // Root directory for the generated files
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true // Skip type checking of declaration files
  },
  "include": [
    "./**/*.ts" // Include all TypeScript files in the current directory and subdirectories
  ],
  "exclude": ["node_modules"] // Exclude node_modules from compilation
}